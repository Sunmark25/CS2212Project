<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ComboBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.uwo.cs2212.CampusMapController">
    <top>
        <BorderPane>
            <top>
                <Label minHeight="20"/>
            </top>
            <right>
                <HBox>
                    <Button fx:id="floor0" text=" G "/>
                    <Button fx:id="floor1" text=" 2 "/>
                    <Button fx:id="floor2" text=" 3 "/>
                    <Button fx:id="floor3" text=" 4 "/>
                    <Button fx:id="floor4" text=" 5 "/>
                    <Button fx:id="floor5" text=" 6 "/>
                    <Label minWidth="30"/>
                    <Button fx:id="poiToggleButton" text="Edit" minWidth="50"/>
                    <Label minWidth="2"/>
                    <Button fx:id="favoriteButton"/>
                    <Label minWidth="30"/>
                    <Button fx:id="zoomIn" text=" - " onAction="#onZoomInButtonClicked"/>
                    <Button fx:id="zoomOut" text=" + " onAction="#onZoomOutButtonClicked"/>
                    <Label minWidth="20"/>
                    <Button fx:id="help" text="Help" onAction="#onHelpButtonClicked"/>
                    <Label minWidth="20"/>
                    <Button fx:id="settingsButton" text="Settings" onAction="#onSettingsButtonClicked"/>
                    <Label minWidth="20"/>
                </HBox>
            </right>
            <bottom>
            </bottom>
        </BorderPane>
    </top>
    <left>
        <HBox>
            <Label minWidth="8"/>
            <VBox fx:id="leftPane" minWidth="200" maxWidth="200">
                <ComboBox fx:id="mapSelector"></ComboBox>
                <Label minHeight="20"/>
                <Label text="Please input location to search..."/>
                <TextField fx:id="searchText" promptText="please input search key ..." />
                <Label minHeight="10"/>
                <HBox alignment="CENTER">
                    <Button text="Search"/>
                    <Label minWidth="4"/>
                    <Button text="Clear"/>
                    <Label minWidth="4"/>
                    <Button text="Favorites"/>
                </HBox>
                <Label text="--------------------------------------"/>
                <!--<Label minHeight="10"/>-->
                <ListView fx:id="searchResult" minHeight="534"/>
            </VBox>
            <Label minWidth="8"/>
        </HBox>
    </left>
    <center>
        <ScrollPane fx:id="mapPane" />
    </center>
    <right>
        <VBox fx:id="rightPane" minWidth="8" />
    </right>
    <bottom>
        <VBox fx:id="bottomPane" minHeight="8" />
    </bottom>
</BorderPane>


<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.uwo.cs2212.CampusMapController">
    <top>
        <BorderPane style="-fx-background-color: #e6f0ff;">
            <top>
                <Label minHeight="10" />
            </top>
            <left>
                <HBox>
                    <Label minWidth="10" />
                    <Button fx:id="signOut" onAction="#signOut" style="-fx-background-color: #8bb4c1;" text="Sign Out" />
                    <Label minWidth="140" />
                    <Button fx:id="zoomOut" onAction="#onZoomOutButtonClicked" style="-fx-background-color: #b3dee5;" text=" + " />
                    <Label minWidth="3" />
                    <Button fx:id="zoomIn" onAction="#onZoomInButtonClicked" style="-fx-background-color: #b3dee5;" text=" - " />
                    <Label minWidth="3" />
                    <Button fx:id="zoomReset" onAction="#onZoomResetButtonClicked" style="-fx-background-color: #b3dee5;" text=" reset " />
                    <Label minWidth="3" />
                </HBox>
            </left>
            <right>
                <HBox>
                    <Button style="-fx-background-color: #b3dee5;" text="Floor:" />
                    <Label minWidth="3" />
                    <Button fx:id="floor0" onAction="#onFloorGButtonClick" style="-fx-background-color: #b3dee5;" text="G" />
                    <Label minWidth="3" />
                    <Button fx:id="floor1" onAction="#onFloor1ButtonClick" style="-fx-background-color: #b3dee5;" text="2" />
                    <Label minWidth="3" />
                    <Button fx:id="floor2" onAction="#onFloor2ButtonClick" style="-fx-background-color: #b3dee5;" text="3" />
                    <Label minWidth="3" />
                    <Button fx:id="floor3" onAction="#onFloor3ButtonClick" style="-fx-background-color: #b3dee5;" text="4" />
                    <Label minWidth="3" />
                    <Button fx:id="floor4" onAction="#onFloor4ButtonClick" style="-fx-background-color: #b3dee5;" text="5" />
                    <Label minWidth="30" />
                    <Label minWidth="40" />
                    <Button fx:id="favoriteButton" onAction="#onFavoriteButtonClicked" style="-fx-background-color: #b3dee5;" />
                    <Label minWidth="3" />
                    <Button fx:id="poiToggleButton" minWidth="50" style="-fx-background-color: #b3dee5;" text="Edit" />
                    <Label minWidth="3" />
                    <Button fx:id="help" onAction="#helpButtonAction" style="-fx-background-color: #b3dee5;" text="Help" />
                    <Label minWidth="3" />
                    <Button fx:id="about" onAction="#aboutButtonAction" style="-fx-background-color: #b3dee5;" text="About" />
                    <Label minWidth="10" />
                </HBox>
            </right>
            <bottom>
            </bottom>
        </BorderPane>
    </top>
    <left>
        <HBox style="-fx-background-color: #e6f0ff;">
            <Label minWidth="8" />
            <VBox fx:id="leftPane" maxWidth="200" minWidth="200">
                <Label minHeight="5" />
                <ComboBox fx:id="mapSelector" style="-fx-background-color: #d9b3ff;" />
                <Label minHeight="15" />
                <Label text="Please input location to search..." />
                <TextField fx:id="searchText" promptText="please input search key ..." />
                <Label minHeight="10" />
                <HBox alignment="CENTER">
                   <Button fx:id="showAllPOI" mnemonicParsing="false" onAction="#onAllPOIButtonClicked" style="-fx-background-color: #d9b3ff;" text="All POI">
                      <font>
                         <Font size="10.0" />
                      </font>
                   </Button>
                    <Label minWidth="4" />
                    <Button onAction="#onSearchButtonClicked" style="-fx-background-color: #d9b3ff;" text="Search">
                  <font>
                     <Font size="10.0" />
                  </font></Button>
                    <Label minWidth="4" />
                    <Button onAction="#onClearButtonClicked" style="-fx-background-color: #d9b3ff;" text="Clear">
                  <font>
                     <Font size="10.0" />
                  </font></Button>
                    <Label minWidth="4" />
                    <Button onAction="#onListFavoritesButtonClicked" style="-fx-background-color: #d9b3ff;" text="Favorites">
                  <font>
                     <Font size="10.0" />
                  </font></Button>
                </HBox>
                <Label text="--------------------------------------" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <CheckBox fx:id="classrooms" mnemonicParsing="false" onAction="#onClassrooms" text="Classrooms">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </CheckBox>
                        <CheckBox fx:id="stairwells" mnemonicParsing="false" onAction="#onStairwells" text="Stairwells">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </CheckBox>
                        <CheckBox fx:id="elevators" mnemonicParsing="false" onAction="#onElevators" text="Elevators">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </CheckBox>
                        <CheckBox fx:id="washrooms" mnemonicParsing="false" onAction="#onWashrooms" text="Washrooms">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </CheckBox>
                        <CheckBox fx:id="entryAndExit" mnemonicParsing="false" onAction="#onEntryAndExit" text="Entry/Exit">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </CheckBox>
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <CheckBox fx:id="genlabs" mnemonicParsing="false" onAction="#onGenlabs" text="GenLabs">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </CheckBox>
                        <CheckBox fx:id="restaurants" mnemonicParsing="false" onAction="#onRestaurants" text="Restaurant">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </CheckBox>
                        <CheckBox fx:id="cs_Labs" mnemonicParsing="false" onAction="#onCS_Labs" text="CS Labs">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </CheckBox>
                        <CheckBox fx:id="collaborative" mnemonicParsing="false" onAction="#onCollaborative" text="Collaborative">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </CheckBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
                <!--<Label minHeight="10"/>-->
                <ListView fx:id="informationList" minHeight="534" />

            </VBox>
            <Label minWidth="8" />
        </HBox>
    </left>
    <center>
        <ScrollPane fx:id="mapPane" onMouseClicked="#onMapClicked" />
    </center>
    <right>
        <VBox fx:id="rightPane" minWidth="8" style="-fx-background-color: #e6f0ff;" />
    </right>
    <bottom>
        <VBox fx:id="bottomPane" minHeight="8" style="-fx-background-color: #e6f0ff;" />
    </bottom>
</BorderPane>

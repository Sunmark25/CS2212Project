<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.uwo.cs2212.CampusMapController">
    <top>
        <BorderPane>
            <top>
                <Label minHeight="20" />
            </top>
            <right>
                <HBox>
                    <Button fx:id="floor0" onAction="#onFloorGButtonClick" text="G" />
                    <Button fx:id="floor1" onAction="#onFloor1ButtonClick" text="2" />
                    <Button fx:id="floor2" onAction="#onFloor2ButtonClick" text="3" />
                    <Button fx:id="floor3" onAction="#onFloor3ButtonClick" text="4" />
                    <Button fx:id="floor4" onAction="#onFloor4ButtonClick" text="5" />
                    <Label minWidth="30" />
                    <Button fx:id="poiToggleButton" minWidth="50" text="Edit" />
                    <Label minWidth="2" />
                    <Button fx:id="favoriteButton" onAction="#onFavoriteButtonClicked" />
                    <Label minWidth="30" />
                    <Button fx:id="zoomIn" onAction="#onZoomInButtonClicked" text=" - " />
                    <Button fx:id="zoomOut" onAction="#onZoomOutButtonClicked" text=" + " />
                    <Button fx:id="zoomReset" onAction="#onZoomResetButtonClicked" text=" reset " />
                    <Label minWidth="20" />
                    <Button fx:id="help" onAction="#onHelpButtonClicked" text="Help" />
                    <Button fx:id="about" onAction="#aboutButtonAction" text="About" />
                    <Button fx:id="settingsButton" onAction="#onSettingsButtonClicked" text="Settings" />
                    <Label minWidth="20" />
                </HBox>
            </right>
            <bottom>
            </bottom>
        </BorderPane>
    </top>
    <left>
        <HBox>
            <Label minWidth="8" />
            <VBox fx:id="leftPane" maxWidth="200" minWidth="200">
                <ComboBox fx:id="mapSelector" />
                <Label minHeight="20" />
                <Label text="Please input location to search..." />
                <TextField fx:id="searchText" promptText="please input search key ..." />
                <Label minHeight="10" />
                <HBox alignment="CENTER">
                    <Button fx:id="showAllPOI" mnemonicParsing="false" onAction="#onAllPOIButtonClicked" text="All POI">
                        <font>
                            <Font size="10.0" />
                        </font>
                    </Button>
                    <Label minWidth="4" />
                    <Button onAction="#onSearchButtonClicked" text="Search">
                        <font>
                            <Font size="10.0" />
                        </font></Button>
                    <Label minWidth="4" />
                    <Button onAction="#onClearButtonClicked" text="Clear">
                        <font>
                            <Font size="10.0" />
                        </font></Button>
                    <Label minWidth="4" />
                    <Button onAction="#onListFavoritesButtonClicked" text="Favorites">
                          <font>
                             <Font size="10.0" />
                          </font></Button>
                </HBox>
                <Label text="--------------------------------------" />
                <!--<Label minHeight="10"/>-->
                <ListView fx:id="informationList" minHeight="534" />

            </VBox>
            <Label minWidth="8" />
        </HBox>
    </left>
    <center>
        <ScrollPane fx:id="mapPane" onMouseClicked="#onMapClicked" />
    </center>
    <right>
        <VBox fx:id="rightPane" minWidth="8" />
    </right>
    <bottom>
        <VBox fx:id="bottomPane" minHeight="8" />
    </bottom>
</BorderPane>

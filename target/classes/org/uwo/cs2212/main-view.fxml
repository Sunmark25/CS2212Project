<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16" fx:controller="org.uwo.cs2212.CampusMapController">
    <top>
        <BorderPane>
            <top>
                <Label minHeight="20" />
            </top>
            <right>
                <HBox>
                    <Button fx:id="floor0" onAction="#onFloorGButtonClick" text="G" />
                    <Button fx:id="floor1" onAction="#onFloor1ButtonClick" text="2" />
                    <Button fx:id="floor2" onAction="#onFloor2ButtonClick" text="3" />
                    <Button fx:id="floor3" onAction="#onFloor3ButtonClick" text="4" />
                    <Button fx:id="floor4" onAction="#onFloor4ButtonClick" text="5" />
                    <Label minWidth="30" />
                    <Button fx:id="poiToggleButton" minWidth="50" text="Edit" />
                    <Label minWidth="2" />
                    <Button fx:id="favoriteButton" onAction="#onFavoriteButtonClicked"/>
                    <Label minWidth="30" />
                    <Button fx:id="zoomIn" onAction="#onZoomInButtonClicked" text=" - " />
                    <Button fx:id="zoomOut" onAction="#onZoomOutButtonClicked" text=" + " />
                    <Label minWidth="20" />
                    <Button fx:id="help" onAction="#onHelpButtonClicked" text="Help" />
                    <Label minWidth="20" />
                    <Button fx:id="settingsButton" onAction="#onSettingsButtonClicked" text="Settings" />
                    <Label minWidth="20" />
                </HBox>
            </right>
            <bottom>
            </bottom>
        </BorderPane>
    </top>
    <left>
        <HBox>
            <Label minWidth="8" />
            <VBox fx:id="leftPane" maxWidth="200" minWidth="200">
                <ComboBox fx:id="mapSelector" />
                <Label minHeight="20" />
                <Label text="Please input location to search..." />
                <TextField fx:id="searchText" promptText="please input search key ..." />
                <Label minHeight="10" />
                <HBox alignment="CENTER">
                    <Button text="Search" onAction="#onSearchButtonClicked"/>
                    <Label minWidth="4" />
                    <Button text="Clear" onAction="#onClearButtonClicked"/>
                    <Label minWidth="4" />
                    <Button text="Favorites" onAction="#onListFavoritesButtonClicked"/>
                </HBox>
                <Label text="--------------------------------------" />
                <!--<Label minHeight="10"/>-->
                <ListView fx:id="informationList" minHeight="534" />

            </VBox>
            <Label minWidth="8" />
        </HBox>
    </left>
    <center>
        <ScrollPane fx:id="mapPane" onMouseClicked="#onMapClicked" />
    </center>
    <right>
        <VBox fx:id="rightPane" minWidth="8" />
    </right>
    <bottom>
        <VBox fx:id="bottomPane" minHeight="8" />
    </bottom>
</BorderPane>
